{
  "manifest_version": 3,
  "name": "AI Fact Checker & Summarizer",
  "version": "1.0",
  "description": "Summarizes YouTube videos and checks facts using Gemini AI.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}